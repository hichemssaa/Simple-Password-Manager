{
  "name": "simple-password-manager",
  "version": "0.0.1",
  "description": "A simple password manager inspired by KeePass",
  "main": "build/electron.js",
  "scripts": {
    "dev": "concurrently \"npm run react-dev\" \"npm run electron-dev\"",
    "react-dev": "react-scripts start",
    "electron-dev": "wait-on http://localhost:3000 && electron .",
    "build": "react-scripts build && copy public\\electron.js build\\ && copy public\\preload.js build\\",
    "electron-build": "electron-builder",
    "dist": "npm run build && npm run electron-build",
    "start": "electron ."
  },
  "keywords": [
    "password",
    "manager",
    "security",
    "electron",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^37.2.0",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "crypto-js": "^4.2.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.294.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "tailwindcss": "^3.3.6"
  },
  "homepage": "./",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.simplepasswordmanager.app",
    "productName": "Simple Password Manager",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": {
        "target": "nsis",
        "arch": ["x64"]
      },
      "publisherName": "Simple Password Manager",
      "verifyUpdateCodeSignature": true
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": {
        "target": "AppImage",
        "arch": ["x64"]
      },
      "category": "Security"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always ask",
      "createStartMenuShortcut": "always ask",
      "shortcutName": "Simple Password Manager",
      "shortcutComment": "Simple Password Manager",
      "shortcutIcon": "assets/icon.ico"
    },
    "fileAssociations": [
      {
        "ext": "pmdb",
        "name": "Password Manager Database",
        "description": "Simple Password Manager Database File",
        "role": "Editor",
        "icon": "assets/icon.ico"
      }
    ]
  }
}
